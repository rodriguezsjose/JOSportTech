<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reclamo_Activity"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/fondo10">

    <ImageButton
        android:id="@+id/btnimg"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_marginBottom="88dp"
        android:src="@drawable/ic_cam2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toEndOf="@+id/fotoImg" />

    <Button
        android:id="@+id/btnRgst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/caja"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.961" />

    <TextView
        android:id="@+id/textView4"

        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:drawableLeft="@drawable/pers1"
        android:drawablePadding="-10dp"
        android:fontFamily="@font/dos"
        android:text="Jaime López Arias"
        android:textAlignment="center"
        android:textColor="#610505"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tres"
        android:text="Seleccione su código de reserva: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/tres"
        android:text="Deporte: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tres"
        android:text="Fecha de reserva:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tres"
        android:text="Centro deportivo:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tres"
        android:text="Seleccione medio de Contacto:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tres"
        android:text="Confirme su contacto"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tres"
        android:text="agregue correo:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tres"
        android:text="Ingrese motivo:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/tres"
        android:text="Ingrese descripción:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/tres"
        android:text="Adjunte archivo de sustento:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/txtHorarioCD"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#070000"
        android:textColorHint="#1B0202"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtProvCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtProvCD"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#150000"
        android:textColorHint="#130101"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtTel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHorarioCD" />

    <EditText
        android:id="@+id/txtDisCD"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColor="#070000"
        android:textColorHint="#1B8A9E"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtDeportesCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCont" />

    <EditText
        android:id="@+id/txtCont"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:hint="Contacto"
        android:inputType="textPersonName"
        android:textColor="#070000"
        android:textColorHint="#1B8A9E"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtDisCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTel" />

    <EditText
        android:id="@+id/txtTel"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:hint="Teléfono"
        android:inputType="textPersonName"
        android:textColor="#0C0101"
        android:textColorHint="#1B8A9E"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtCont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProvCD" />

    <EditText
        android:id="@+id/txtNombreCD"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:ems="10"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:hint="Petición"
        android:inputType="textPersonName"

        android:text="RECLAMO"
        android:textAlignment="gravity"
        android:textColor="#0E0101"
        android:textColorHint="#120101"
        android:textSize="13sp"
        android:textStyle="italic"
        android:visibility="invisible"

        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="-5dp" />

    <EditText
        android:id="@+id/txtDirCD"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textColor="#0B0000"
        android:textColorHint="#120000"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtHorarioCD"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtDeportesCD"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:hint="Motivo"
        android:inputType="textPersonName"
        android:textColor="#070000"
        android:textColorHint="#1B8A9E"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtServiciosCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDisCD" />

    <EditText
        android:id="@+id/txtAdj"
        android:layout_width="85dp"
        android:layout_height="52dp"
        android:layout_marginEnd="276dp"
        android:ems="10"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:hint="Adjunto"
        android:inputType="textPersonName"
        android:text="ADJUNTO"
        android:textColor="#070000"
        android:textColorHint="#1B0202"
        android:textSize="13sp"
        android:textStyle="italic"
        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtServiciosCD"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:fontFamily="@font/tres"
        android:gravity="center"
        android:hint="Descripción"
        android:inputType="textPersonName"
        android:textColor="#070000"
        android:textColorHint="#1B8A9E"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDeportesCD" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="179dp"
        android:layout_height="165dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="-46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pelo1" />

    <Spinner
        android:id="@+id/idSpinnerReserva"
        android:layout_width="81dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDirCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/fotoImg"
        android:layout_width="74dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.515"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>