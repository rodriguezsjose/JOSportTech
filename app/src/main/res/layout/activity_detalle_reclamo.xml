<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo10"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ActivityDetalleReclamo"
    tools:layout_editor_absoluteX="26dp"
    tools:layout_editor_absoluteY="82dp">


    <TextView
        android:id="@+id/textView4"

        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:drawableLeft="@drawable/pers1"
        android:drawablePadding="-10dp"
        android:fontFamily="@font/dos"
        android:text="Jaime López Arias"
        android:textAlignment="center"
        android:textColor="#610505"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/tres"
        android:text="Su petición seleccionada fue:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/txtNombreCD"
        app:layout_constraintHorizontal_bias="0.702"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="176dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/tres"
        android:text="Corresponde al deporte:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/tres"
        android:text="el día:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/tres"
        android:text="En el centro deportivo"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/tres"
        android:text="Se le notificará al correo:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/tres"
        android:text="El motivo de su reclamo fue:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/tres"
        android:text="Lo que sucedió fue:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtHorarioCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Fecha"
        android:inputType="textPersonName"
        android:shadowColor="#101010"
        android:textColor="#151414"
        android:textColorHint="#0C0C0C"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDirCD" />

    <EditText
        android:id="@+id/txtProvCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Centro Deportivo"
        android:inputType="textPersonName"
        android:textColor="#171616"
        android:textColorHint="#1B1A1A"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHorarioCD" />

    <EditText
        android:id="@+id/txtDisCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColor="#2E2626"
        android:textColorHint="#232222"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtDeportesCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProvCD" />

    <EditText
        android:id="@+id/txtNombreCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Petición"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textColor="#0E0E0E"
        android:textColorHint="#1B1A1A"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtDirCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Código de reserva"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textColor="#0E0E0E"
        android:textColorHint="#070707"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreCD" />

    <EditText
        android:id="@+id/txtDeportesCD"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Motivo"
        android:inputType="textPersonName"
        android:textColor="#1E0202"
        android:textColorHint="#230202"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtServiciosCD"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtServiciosCD"
        android:layout_width="174dp"
        android:layout_height="95dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="136dp"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Descripción"
        android:inputType="textPersonName"
        android:textColor="#1E0202"
        android:textColorHint="#290505"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>