<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo10"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".ActivityDetalleProveedor">

    <TextView
        android:id="@+id/textView4"

        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:drawableLeft="@drawable/ic_sports"
        android:drawablePadding="-10dp"
        android:fontFamily="@font/dos"
        android:text="Centro Deportivo"
        android:textAlignment="center"
        android:textColor="#610505"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/tres"
        android:foregroundGravity="fill_vertical"
        android:text="    Nombre:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/txtNombreCD"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="176dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/tres"
        android:text="Se ubica en:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tres"
        android:text="Horario de atención"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="121dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/tres"
        android:text="Se encuentra en la provincia de:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:fontFamily="@font/tres"
        android:text="Se encuentra en el distrito de:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/tres"
        android:text="Los deportes que ofrece son:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/tres"
        android:text="Los servicios son:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtHorarioCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Horario"
        android:inputType="textPersonName"
        android:shadowColor="#101010"
        android:textColor="#151414"
        android:textColorHint="#0C0C0C"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtProvCD"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtProvCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Provincia"
        android:inputType="textPersonName"
        android:textColor="#171616"
        android:textColorHint="#1B1A1A"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtDisCD"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtDisCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Distrito"
        android:inputType="textPersonName"
        android:textColor="#2E2626"
        android:textColorHint="#232222"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtDeportesCD"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtNombreCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginEnd="4dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Nombre de CD"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textColor="#0E0E0E"
        android:textColorHint="#1B1A1A"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtDirCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtDirCD"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Dirección"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textColor="#0E0E0E"
        android:textColorHint="#070707"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtHorarioCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtDeportesCD"
        android:layout_width="176dp"
        android:layout_height="72dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Deportes"
        android:inputType="textPersonName"
        android:textColor="#1E0202"
        android:textColorHint="#230202"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtServiciosCD"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtServiciosCD"
        android:layout_width="174dp"
        android:layout_height="95dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Servicios"
        android:inputType="textPersonName"
        android:textColor="#1E0202"
        android:textColorHint="#290505"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cch" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/cpi" />

</androidx.constraintlayout.widget.ConstraintLayout>