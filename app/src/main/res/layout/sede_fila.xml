<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/fondo10"
    android:layout_height="153dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@drawable/fondo10"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/fondo10"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewSede"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466"
                app:srcCompat="@drawable/ic_sports" />

            <TextView
                android:id="@+id/SedeFilaNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nombre de Sede"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewSede"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/SedeFilaDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="descripcion de la sede"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imageViewSede"
                app:layout_constraintTop_toBottomOf="@+id/SedeFilaNombre" />

            <TextView
                android:id="@+id/SedeFilaLatitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Latitud"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imageViewSede"
                app:layout_constraintTop_toBottomOf="@+id/SedeFilaDescripcion" />

            <TextView
                android:id="@+id/SedeFilaLongitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Longitud"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imageViewSede"
                app:layout_constraintTop_toBottomOf="@+id/SedeFilaLatitud" />

            <TextView
                android:id="@+id/SedeFilaTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Telefono"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imageViewSede"
                app:layout_constraintTop_toBottomOf="@+id/SedeFilaLongitud" />

            <ImageButton
                android:id="@+id/SedeFilaIrAlMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="42dp"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_ir_a_centro"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/SedeFilaLlamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2dp"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_contact"
                tools:ignore="SpeakableTextPresentCheck"
                app:layout_constraintTop_toBottomOf="@+id/SedeFilaIrAlMapa" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>